<link rel="stylesheet" type="text/css" href="/assets/css/dashboard.css">

<div id="container">

    <h4 style="color:darkred;">Welcome <%=user.name%> !
    </h4>
    <% if(user.isAdmin){ %>
        <div id="adminViewContainer">
            <div id="fabIcon">
                <button id="addStudent" class="btn btn-primary"
                    onclick="window.location.href='http://localhost:8000/employee/addEmployee';">Add Employee</button>
            </div>
            <div style="display:flex; flex-direction: column; 
        border: 1px solid black; width: 500px; height: 100%; margin-top: 10px;">
                <div style="display:flex;justify-content: center;padding: 10px;width: 500px; font-weight: bold;">
                    <a style="font-size: 14px;width: 22.5%" text-decoration:none;>EmpId</a>
                    <a style="font-size: 14px;width: 22.5%" text-decoration:none;>Name</a>
                    <a style="font-size: 14px;width: 22.5%" text-decoration:none;>Department</a>
                    <a style="font-size: 14px;width: 22.5%" text-decoration:none;>Location</a>
                    <div style="width: 10%"></div>
                </div>
                <ul id="employeesListView" style="list-style-type:
        none;  padding: 0px; margin-bottom: 0px;">
                </ul>
            </div>
        </div>
        <% } else {%>
           
                <div id="employeeViewContainer">
                    <div id="buttonContainer">
                        <button id="viewFeedBack" class="btn btn-success actionButton"
                            onclick="window.location.href='http://localhost:8000/feedback/giveFeedBack';">View my Feedback</button>
                        <button id="evaluateFeedBack" class="btn btn-warning actionButton"
                            onclick="window.location.href='http://localhost:8000/feedback/giveFeedBack/<%=user._id%>';">Evaluate Feedback
                         </button>
                    </div>
                </div>
                <% } %>

</div>
<script src="/assets/js/dashboard.js" type='text/javascript'></script>